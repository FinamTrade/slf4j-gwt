<module>
  <inherits name="ru.finam.slf4jgwt.api.API"/>
  <inherits name="com.google.gwt.logging.Logging"/>

  <source path=""/>

  <replace-with class="org.slf4j.helpers.NOPLoggerFactory">
    <when-type-is class="org.slf4j.ILoggerFactory"/>
  </replace-with>

  <replace-with class="ru.finam.slf4jgwt.logging.gwt.GWTLoggerFactory">
    <when-type-is class="org.slf4j.ILoggerFactory"/>
    <any>
      <when-property-is name="gwt.logging.enabled" value="TRUE"/>
      <when-property-is name="gwt.logging.enabled" value="SEVERE"/>
      <when-property-is name="gwt.logging.enabled" value="WARNING"/>
    </any>
  </replace-with>
</module>