<!--
    Run this module in Super Dev Mode
-->
<module rename-to="showcase">
    <inherits name="com.google.gwt.core.Core"/>
    <inherits name="ru.finam.slf4jgwt.logging.nop.NOP"/>
    <inherits name="ru.finam.slf4jgwt.logging.util.Util"/>
    <entry-point class="ru.finam.slf4jgwt.showcase.client.Showcase"/>

    <set-configuration-property name="devModeRedirectEnabled" value="true"/>
    <set-property name="compiler.useSourceMaps" value="true" />

    <set-property name="user.agent" value="safari"/>
    <set-configuration-property name="user.agent.runtimeWarning" value="false"/>

    <set-property name="compiler.stackMode" value="emulated"/>
    <set-configuration-property name="compiler.emulatedStack.recordLineNumbers" value="true"/>
    <set-configuration-property name="compiler.emulatedStack.recordFileNames" value="true"/>

    <add-linker name="xsiframe"/>
</module>